<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="classMute"
                type="com.sheldon.bujofe.object.ClassMute" />
    </data>


        <!--Colored view dividers-->

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/itemFlightDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5D4037"
                    android:gravity="center"
                    android:lineSpacingExtra="2.5dp"
                    android:padding="5dp"
                    android:textAllCaps="true"
                    android:textColor="@color/title_color_white"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.143"
                    tools:text="週二 9月 30號 14:00" />

            <TextView
                    android:id="@+id/itemDepartureAirportCityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/itemDepartureAirportCodeText"
                    app:layout_constraintStart_toEndOf="@+id/itemFlightDateText"
                    app:layout_constraintTop_toTopOf="@+id/itemDepartureAirportCodeText"
                    app:layout_constraintVertical_bias="1.0"
                    tools:text="課程名稱" />

            <TextView
                    android:id="@+id/itemDepartureAirportCodeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemFlightDateText"
                    tools:text="教師名稱" />

            <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/calendar_roll_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/itemDepartureAirportCityText"
                    app:layout_constraintTop_toBottomOf="@+id/itemDepartureAirportCityText" />

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/calendar_teach_room"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/itemDepartureAirportCodeText"
                    app:layout_constraintTop_toBottomOf="@+id/itemDepartureAirportCodeText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>