<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.sheldon.bujofe.scan.ScanResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/img_log_in_result"
                android:layout_width="230dp"
                android:layout_height="336dp"
                android:background="@color/color_orange_lite_Login_page"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_out" />

        <TextView

                android:id="@+id/textLoginOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:letterSpacing="0.15"
                android:text="@string/log_in_ok"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img_log_in_result"
                app:layout_constraintStart_toStartOf="@+id/img_log_in_result"
                tools:layout_editor_absoluteY="379dp" />

        <TextView
                android:id="@+id/tx_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:fontFamily="@font/noto_sans"
                android:text="@string/class_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/img_log_in_result"
                tools:layout_editor_absoluteY="437dp" />

        <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Hi"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tx_class_name"
                app:layout_constraintStart_toEndOf="@+id/tx_class_name"
                app:layout_constraintTop_toTopOf="@+id/tx_class_name"
                app:layout_constraintVertical_bias="0.0" />

        <TextView
                android:id="@+id/tx_class_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tx_class_name"
                app:layout_constraintTop_toBottomOf="@+id/tx_class_name" />

        <TextView
                android:id="@+id/class_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.scanTimestamp}"
                app:layout_constraintBottom_toBottomOf="@+id/tx_class_start_time"
                app:layout_constraintStart_toEndOf="@+id/tx_class_start_time"
                app:layout_constraintTop_toTopOf="@+id/tx_class_start_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>