<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="reClass"
                type="com.sheldon.bujofe.object.ReClass" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/color_orange_Light"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                <TextView
                        android:id="@+id/tx_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_reclass_text_title"
                        android:text="@string/tx_reclass_time"
                        android:textColor="@color/color_orange_text_gray"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tx_class_name"
                        app:layout_constraintTop_toBottomOf="@+id/tx_class_name" />

                <TextView
                        android:id="@+id/tx_reclass_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_reclass_text_title"
                        android:fontFamily="@font/noto_sans"
                        android:text="@string/tx_reclass_type"
                        android:textColor="@color/color_orange_text_gray"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        app:layout_constraintTop_toTopOf="@+id/tx_class_name" />

                <TextView
                        android:id="@+id/tx_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_reclass_text_title"
                        android:text="@string/submit_status"
                        android:textColor="@color/color_orange_text_gray"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/date"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/tx_reclass_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rounded_reclass_text_title"
                        android:text="@string/tx_reclass_context"
                        android:textColor="@color/color_orange_text_gray"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline3"
                        app:layout_constraintTop_toBottomOf="@+id/tx_reclass_type" />

                <TextView
                        android:id="@+id/tx_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"

                        android:background="@drawable/rounded_reclass_text_title"
                        android:text="@string/class_name"
                        android:textColor="@color/color_orange_text_gray"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/date"
                        app:layout_constraintTop_toBottomOf="@+id/date" />

                <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_orange_Dark"
                        android:fontFamily="@font/noto_sans"
                        android:padding="3dp"
                        android:text="@{reClass.date}"
                        android:textColor="@color/color_orange_text_gray"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="2019/09/08" />

                <TextView
                        android:id="@+id/class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_reclass_text_context"
                        android:text="@{reClass.className}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx_class_name"
                        app:layout_constraintStart_toEndOf="@+id/tx_class_name"
                        app:layout_constraintTop_toTopOf="@+id/tx_class_name"
                        tools:text="芙丸英文" />

                <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_reclass_text_context"
                        android:text="@{reClass.re_class_time}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx_start_time"
                        app:layout_constraintStart_toEndOf="@+id/tx_start_time"
                        app:layout_constraintTop_toTopOf="@+id/tx_start_time"
                        tools:text="2017/05/06" />

                <TextView
                        android:id="@+id/reclass_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_reclass_text_context"
                        android:fontFamily="@font/noto_sans"
                        android:text="@{reClass.re_class_type}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx_reclass_type"
                        app:layout_constraintStart_toEndOf="@+id/tx_reclass_type"
                        app:layout_constraintTop_toTopOf="@+id/tx_reclass_type"
                        app:layout_constraintVertical_bias="0.0"
                        tools:text="8 pm" />

                <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_reclass_text_context"
                        android:text="@{reClass.status}"
                        android:textColor="@color/Color_White_ffffff"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tx_status"
                        app:layout_constraintStart_toEndOf="@+id/tx_status"
                        tools:text="Approved" />

                <TextView
                        android:id="@+id/reclass_context"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_reclass_text_context"
                        android:text="@{reClass.re_class_context}"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/tx_reclass_context"
                        app:layout_constraintTop_toTopOf="@+id/tx_reclass_context"
                        tools:text="1-1 名詞字句" />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.48" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>